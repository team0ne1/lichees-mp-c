<view class="tagController"><view class="tagContainer"><block wx:for="{{value}}" wx:for-item="tagText" wx:for-index="index" wx:key="index"><view class="{{['tagItem',tagBgColor]}}"><text style="color:#FFF;font-size:1.1em;font-weight:lighter;" data-text="{{tagText}}" data-event-opts="{{[['tap',[['tapTag',['$event']]]]]}}" bindtap="__e">{{tagText}}</text><block wx:if="{{isShowDelIcon}}"><text class="tagDelIcon" data-text="{{tagText}}" data-event-opts="{{[['tap',[['delTag',['$event']]]]]}}" bindtap="__e">x</text></block></view></block></view><block wx:if="{{isShowAdd}}"><view class="tagInput"><input type="text" placeholder="输入新的标签,多个标签用逗号间隔" data-event-opts="{{[['input',[['__set_model',['','tagString','$event',[]]]]]]}}" value="{{tagString}}" bindinput="__e"/><button type="default" size="mini" data-event-opts="{{[['tap',[['createTags',['$event']]]]]}}" bindtap="__e">添加</button></view></block></view>